---
import { siteConfig } from "../config";
---

<header class="flex flex-col justify-center items-center">
  <div class="flex items-center gap-4">
    <a
      href={siteConfig.url}
      class="block border-2 border-white rounded-full overflow-hidden shadow-lg"
    >
      <img
        src={siteConfig.image}
        width="120"
        height="120"
        alt={siteConfig.name}
      />
    </a>

    <div>
      <h1 class="text-2xl font-bold leading-none">{siteConfig.name}</h1>
      <h2 class="text-lg text-cyan-800">{siteConfig.title}</h2>
      <nav aria-label="Social links" class="flex items-center gap-2 mt-2">
        {
          siteConfig.social.map((social) => (
            <a
              href={social.url}
              class="block p-2 rounded-lg bg-cyan-700/90 text-cyan-100 hover:bg-cyan-800/90 hover:text-white hover:scale-105 transition-all"
              title={`${social.platform} â€“ ${social.username}`}
            >
              {social.icon ? <social.icon class="w-5 h-5" /> : social.username}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>
